<Window x:Class="Semana2.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="200 80">
            <Label Content="Email" />
            <TextBox Name="emailText" />
            <TextBlock Name="errorEmail" Foreground="Red" />
            <Label Content="Contraseña" />
            <PasswordBox Name="passwordText" />
            <TextBlock Name="errorPass" Foreground="Red" />
            <Button Content="Iniciar Sesión masna" Height="40" FontWeight="Bold" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
